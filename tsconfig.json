{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es5"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "target": "es2017",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}